@page
@model AplicacionNetRazor.Pages.Cursos.IndexModel
@{
    ViewData["Title"] = "Lista de Cursos";
}

@*<h3 class="text-center">Primer mensaje de ejemplo que te lleva a YT <a href="https://www.youtube.com/">www.youtube/ejemplo</a></h3>*@

<div class="card">
    @*Cabecera*@
    <div class="card-header">
        <div class="row">
            <div class="col-sm-6">
                <h2 class="text-info">Lista de Cursos</h2>
            </div>
            <div class="col-sm-6">
                <a asp-page="Crear" class="btn btn-primary">Crear Nuevo Curso</a>
            </div>
        </div>
    </div>
    @*Cuerpo*@
    <div class="card-body">
        <form method="post">
       @if(Model.Cursos.Count() > 0)
        {
            <br></br><br></br>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Cursos.First().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Cursos.First().NombreCurso)</th>
                    <th>@Html.DisplayNameFor(m => m.Cursos.First().CantClases)</th>
                    <th>@Html.DisplayNameFor(m => m.Cursos.First().Precio)</th>
                    <th>@Html.DisplayNameFor(m => m.Cursos.First().FechaCreacion)</th>
                    <th>Acciones</th>
                </tr>
                @foreach(var item in Model.Cursos)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.NombreCurso)</td>
                        <td>@Html.DisplayFor(m => item.CantClases)</td>
                        <td>@Html.DisplayFor(m => item.Precio)</td>
                        <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                        <td> <a asp-route-id="@item.Id" asp-page="Editar" class="btn btn-success btn-sm">Editar</a> 
                            <button asp-page-handler="Borrar" asp-route-id="@item.Id" onclick="return confirm('Está seguro de borrar el curso?')" class="btn btn-danger btn-sm">Borrar</button>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No hay cursos disponibles</p>
        }
       </form>
    </div>
</div>