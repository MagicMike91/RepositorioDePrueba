@page
@model AplicacionNetRazor.Pages.Cursos.EditarModel
@{
    ViewData["Title"] = "Editar curso";
}

<div class="card">
    @*Cabecera*@
    <div class="card-header">
        <h2 class="text-info">Editar curso</h2>
    </div>

    @*Cuerpo*@
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*Guardo el id a mandar*@
            <input type="hidden" asp-for="Curso.Id" />
            <div class="container" style="padding: 30px">
                
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Curso.NombreCurso"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Curso.NombreCurso" class="form-control" />
                        </div>
                        <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Curso.CantClases"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Curso.CantClases" class="form-control" />
                        </div>
                        <span asp-validation-for="Curso.CantClases" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Curso.Precio"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Curso.Precio" class="form-control" />
                        </div>
                        <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Editar" class="btn btn-primary  form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success  form-control">Volver a la Lista</a>
                        </div>                        
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
